generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PriceSnapshot {
  id            String   @id @default(cuid())
  symbol        String
  currency      String?
  price         Float
  change        Float?
  changePercent Float?
  source        String   @default("yahoo")
  createdAt     DateTime @default(now())
}

model Ticker {
  id        String   @id @default(cuid())
  symbol    String   @unique
  createdAt DateTime @default(now())
}
